{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": [ "./*" ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*"
  ]
}
